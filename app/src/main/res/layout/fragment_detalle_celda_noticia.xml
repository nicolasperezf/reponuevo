<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.DetalleCeldaNoticiaFragment">


  <android.support.design.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentDetalleCelda_imageView_imagenNoticia"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de la noticia"
            android:id="@+id/fragmentDetalleCelda_textView_tituloNoticia"/>

        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:layout_height="wrap_content"
            android:id="@+id/fragmentDetalleCelda_textView_descripcionNoticia"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentDetalleCelda_textView_opinionNoticia"/>
   </LinearLayout>

  </android.support.design.widget.CoordinatorLayout>
    </android.support.v7.widget.CardView>


